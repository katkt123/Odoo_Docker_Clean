<odoo>
    <data>
        <!-- List view Estate Property -->
        <record id="view_estate_property_tree" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="property_type_id"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="state"/>
                    <field name="salesperson_id"/>
                    <field name="buyer_id"/>
                </list>
            </field>
        </record>

        <!-- Form view Estate Property -->
        <record id="view_estate_property_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Bất động sản">
                    <header>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="property_type_id"/>
                                <field name="tag_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="selling_price" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Mô tả">
                                <field name="description"/>
                            </page>
                            <page string="Đề nghị giá">
                                <field name="offer_ids">
                                    <list editable="bottom">
                                        <field name="partner_id"/>
                                        <field name="price"/>
                                        <field name="status"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Đặt cọc">
                                <field name="deposit_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="amount"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Hóa đơn">
                                <field name="invoice_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="amount_total"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view Estate Property (simple) -->
        <record id="view_estate_property_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Tìm bất động sản">
                    <field name="name"/>
                    <field name="property_type_id"/>
                </search>
            </field>
        </record>
    </data>
</odoo>
