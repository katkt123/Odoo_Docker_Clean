<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE VIEW: Doanh thu -->
    <record id="view_estate_revenue_tree" model="ir.ui.view">
        <field name="name">estate.revenue.tree</field>
        <field name="model">estate.revenue</field>
        <field name="arch" type="xml">
            <list string="Doanh thu">
                <header>
                    <button name="action_sync_paid_invoices"
                            type="object"
                            string="Đồng bộ Hóa đơn"
                            class="oe_highlight o_list_button_add"
                            icon="fa-refresh"/>
                </header>
                <field name="name"/>
                <field name="date"/>
                <field name="revenue_type"/>
                <field name="property_id"/>
                <field name="customer_id"/>
                <field name="amount" sum="Tổng"/>
                <field name="payment_date"/>
                <field name="paid_invoice_id" optional="show"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_estate_revenue_form" model="ir.ui.view">
        <field name="name">estate.revenue.form</field>
        <field name="model">estate.revenue</field>
        <field name="arch" type="xml">
            <form string="Doanh thu">
                <header>
                    <button name="action_sync_paid_invoices"
                            type="object"
                            string="Đồng bộ Hóa đơn đã thanh toán"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="revenue_type"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="property_id"/>
                            <field name="customer_id"/>
                            <field name="estate_invoice_id"/>
                            <field name="payment_date"/>
                            <field name="paid_invoice_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Thông tin Hóa đơn">
                            <group>
                                <field name="paid_invoice_id" readonly="1"/>
                                <field name="estate_invoice_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_estate_revenue_search" model="ir.ui.view">
        <field name="name">estate.revenue.search</field>
        <field name="model">estate.revenue</field>
        <field name="arch" type="xml">
            <search string="Doanh thu">
                <field name="name"/>
                <field name="date"/>
                <field name="revenue_type"/>
                <field name="property_id"/>
                <field name="customer_id"/>

                <filter string="Bán nhà" name="sale" domain="[('revenue_type', '=', 'sale')]"/>
                <filter string="Thuê nhà" name="rent" domain="[('revenue_type', '=', 'rent')]"/>
                <filter string="Dịch vụ" name="service" domain="[('revenue_type', '=', 'service')]"/>
                <filter string="Hoa hồng" name="commission" domain="[('revenue_type', '=', 'commission')]"/>
                <filter string="Có hóa đơn" name="has_invoice" domain="[('estate_invoice_id', '!=', False)]"/>
            </search>
        </field>
    </record>

    <!-- ACTION WINDOW -->
    <record id="action_estate_revenue" model="ir.actions.act_window">
        <field name="name">Doanh thu</field>
        <field name="res_model">estate.revenue</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_estate_revenue_search"/> <!-- thêm dòng này -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo khoản doanh thu đầu tiên
            </p>
            <p>
                Quản lý các khoản doanh thu từ bán, thuê, dịch vụ và các hoạt động khác.
            </p>
        </field>
    </record>

    <!-- SERVER ACTION: Đồng bộ hóa đơn đã thanh toán -->
    <record id="action_sync_paid_invoices" model="ir.actions.server">
        <field name="name">Đồng bộ Hóa đơn đã thanh toán</field>
        <field name="model_id" ref="model_estate_revenue"/>
        <field name="binding_model_id" ref="model_estate_revenue"/>
        <field name="binding_type">action</field>

        <!-- Cho phép hiển thị trong LIST VIEW -->
        <field name="binding_view_types">list</field>

        <field name="state">code</field>
        <field name="code">
def sync_invoices():
            action = model.auto_create_revenue_from_paid_invoices()
            if action:
                return {
                    'type': 'ir.actions.client',
                    'tag': 'display_notification',
                    'params': {
                        'title': 'Thành công!',
                        'message': f'Đã tạo {len(action)} khoản doanh thu từ hóa đơn đã thanh toán.',
                        'type': 'success',
                        'sticky': False,
                    }
                }
            else:
                return {
                    'type': 'ir.actions.client',
                    'tag': 'display_notification',
                    'params': {
                        'title': 'Thông báo',
                        'message': 'Không có hóa đơn đã thanh toán mới để đồng bộ.',
                        'type': 'info',
                        'sticky': False,
                    }
                }
sync_invoices()
        </field>
    </record>

</odoo>
