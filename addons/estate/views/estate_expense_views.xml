<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Chi phí -->
    <record id="view_estate_expense_tree" model="ir.ui.view">
        <field name="name">estate.expense.tree</field>
        <field name="model">estate.expense</field>
        <field name="arch" type="xml">
            <list string="Chi phí">
                <field name="name"/>
                <field name="date"/>
                <field name="expense_type"/>
                <field name="property_id"/>
                <field name="vendor_id"/>
                <field name="amount" sum="Tổng"/>
                <field name="paid"/>
                <field name="payment_date"/>
            </list>
        </field>
    </record>

    <record id="view_estate_expense_form" model="ir.ui.view">
        <field name="name">estate.expense.form</field>
        <field name="model">estate.expense</field>
        <field name="arch" type="xml">
            <form string="Chi phí">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="expense_type"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="property_id"/>
                            <field name="vendor_id"/>
                            <field name="bill_id"/>
                            <field name="paid"/>
                            <field name="payment_date" invisible="[('paid', '=', False)]"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estate_expense_search" model="ir.ui.view">
        <field name="name">estate.expense.search</field>
        <field name="model">estate.expense</field>
        <field name="arch" type="xml">
            <search string="Chi phí">
                <field name="name"/>
                <field name="date"/>
                <field name="expense_type"/>
                <field name="property_id"/>
                <field name="vendor_id"/>
                <filter string="Đã thanh toán" name="paid" domain="[('paid', '=', True)]"/>
                <filter string="Chưa thanh toán" name="unpaid" domain="[('paid', '=', False)]"/>
                <filter string="Bảo trì" name="maintenance" domain="[('expense_type', '=', 'maintenance')]"/>
                <filter string="Tiện ích" name="utility" domain="[('expense_type', '=', 'utility')]"/>
                <filter string="Thuế" name="tax" domain="[('expense_type', '=', 'tax')]"/>
                <filter string="Bảo hiểm" name="insurance" domain="[('expense_type', '=', 'insurance')]"/>
                <filter string="Hoa hồng" name="commission" domain="[('expense_type', '=', 'commission')]"/>
                <filter string="Marketing" name="marketing" domain="[('expense_type', '=', 'marketing')]"/>
                <filter string="Pháp lý" name="legal" domain="[('expense_type', '=', 'legal')]"/>
            </search>
        </field>
    </record>

    <record id="action_estate_expense" model="ir.actions.act_window">
        <field name="name">Chi phí</field>
        <field name="res_model">estate.expense</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo khoản chi phí đầu tiên
            </p>
            <p>
                Quản lý các khoản chi phí bảo trì, tiện ích, thuế và các chi phí khác.
            </p>
        </field>
    </record>
</odoo>
