<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="action_smileliving_property_submission" model="ir.actions.act_window">
      <field name="name">Property Submissions</field>
      <field name="res_model">smileliving.property.submission</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Top-level menu placed under SmileLiving next to Báo cáo tài chính -->
    <menuitem id="menu_smileliving_submission_root" name="Đơn xác nhận đăng tin" parent="menu_house_root" action="action_smileliving_property_submission" sequence="31"/>

    <record id="view_smileliving_property_submission_list" model="ir.ui.view">
      <field name="name">smileliving.property.submission.list</field>
      <field name="model">smileliving.property.submission</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="uploader_id"/>
          <field name="bedroom_count"/>
          <field name="bathroom_count"/>
          <field name="area"/>
          <field name="price"/>
          <field name="type_sale"/>
          <field name="state"/>
          <field name="submitted_at"/>
        </list>
      </field>
    </record>

    <record id="view_smileliving_property_submission_form" model="ir.ui.view">
      <field name="name">smileliving.property.submission.form</field>
      <field name="model">smileliving.property.submission</field>
      <field name="arch" type="xml">
        <form string="Property Submission">
          <sheet>
            <group>
              <field name="name"/>
              <field name="uploader_id"/>
              <field name="contact_info"/>
              <field name="price"/>
              <field name="currency_id"/>
              <field name="type_sale"/>
              <field name="type_id"/>
              <field name="area"/>
              <field name="bedroom_count"/>
              <field name="bathroom_count"/>
            </group>
            <group>
              <field name="description"/>
              <field name="attachment_ids" widget="many2many_binary"/>
            </group>
            <group string="Review">
              <field name="state" readonly="1"/>
              <field name="submitted_at" readonly="1"/>
              <field name="reviewed_by" readonly="1"/>
              <field name="reviewed_at" readonly="1"/>
              <field name="rejection_reason" readonly="1"/>
            </group>
          </sheet>
          <footer>
            <button name="action_submit" string="Gửi duyệt" type="object" class="oe_highlight" invisible="state != 'draft'"/>
            <button name="action_approve_and_convert" string="Duyệt &amp; Tạo sản phẩm" type="object" class="btn-success" groups="base.group_system" invisible="state != 'pending'"/>
            <button name="action_reject" string="Từ chối" type="object" class="btn-warning" groups="base.group_system" invisible="state != 'pending'"/>
            <button string="Close" class="btn-default" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>
  </data>
</odoo>
