<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Invoice Property Tree View -->
        <record id="view_smileliving_invoice_property_tree" model="ir.ui.view">
            <field name="name">smileliving.invoice.list</field>
            <field name="model">smileliving.invoice</field>
            <field name="arch" type="xml">
                <list string="Hóa Đơn Bất Động Sản" decoration-success="state=='paid'" decoration-danger="state=='cancelled'">
                    <field name="property_id"/>
                    <field name="partner_id"/>
                    <field name="amount" widget="monetary"/>
                    <field name="date"/>
                    <field name="state"/>
                    <field name="currency_id" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Invoice Property Form View -->
        <record id="view_smileliving_invoice_property_form" model="ir.ui.view">
            <field name="name">smileliving.invoice.property.form</field>
            <field name="model">smileliving.invoice</field>
            <field name="arch" type="xml">
                <form string="Hóa Đơn Bất Động Sản">
                    <header>
                        <button name="action_paid" string="Đã Thanh Toán" type="object" 
                                invisible="state in ['paid', 'cancel']" class="btn-success"/>
                        <button name="action_cancel" string="Hủy" type="object" 
                                invisible="state == 'cancel'"/>
                        <button name="action_draft" string="Bản Nháp" type="object" 
                                invisible="state == 'draft'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,paid,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="property_id"/>
                            <field name="partner_id"/>
                            <field name="date"/>
                            <field name="amount" widget="monetary"/>
                            <field name="currency_id"/>
                        </group>
                        <group string="Mô Tả">
                            <field name="description" nolabel="1"/>
                        </group>
                    </sheet>
                    
                </form>
            </field>
        </record>

        

        <!-- Invoice Property Action -->
        <record id="action_smileliving_invoice_property" model="ir.actions.act_window">
            <field name="name">Hóa Đơn Bất Động Sản</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">smileliving.invoice</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo hóa đơn đầu tiên!
                </p>
                <p>
                    Quản lý hóa đơn cho các giao dịch bất động sản, theo dõi thanh toán và trạng thái.
                </p>
            </field>
        </record>

        <!-- Invoice Property Menu -->
        <menuitem id="menu_smileliving_invoice_property" name="Hóa Đơn" parent="menu_house_root" 
                  action="action_smileliving_invoice_property" sequence="30"/>
    </data>
</odoo>
